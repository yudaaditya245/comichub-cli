// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/dev_comichub"
}

model Comics {
  id             Int      @id @default(autoincrement())
  title          String   @db.VarChar(255)
  synonyms       String?  @db.Text
  description    String   @db.Text
  cover_img      String   @db.VarChar(255)
  latest_chapter Int      @db.Int
  link_chapter   String   @db.VarChar(255)
  genres         String   @db.VarChar(255)
  type           String   @db.VarChar(255)
  score          Int?     @default(0)
  anilist_url    String   @default("") @db.VarChar(255)
  updated_at     DateTime @db.DateTime()
  Scraps         Scraps[]
}

model Scraps {
  id             Int      @id @default(autoincrement())
  title          String   @db.VarChar(255)
  main_id        Comics?  @relation(fields: [mainId], references: [id])
  mainId         Int?
  latest_chapter Int      @db.Int
  link_chapter   String   @db.VarChar(255)
  source         String   @db.VarChar(255)
  link           String   @db.VarChar(255)
  cover_img      String   @db.VarChar(255)
  images         String?  @db.Text
  updated_at     DateTime @db.DateTime()
}
